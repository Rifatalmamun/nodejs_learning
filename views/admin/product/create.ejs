<%- include('../../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../../includes/navigation.ejs') %>

    <main>
        
        <% if (editing) { %>
            <h1>Edit Product</h1>
        <% } else { %>
            <h1>Create Product</h1>
        <% } %>
        
        <form class="product-form" action="/admin/<% if(editing) { %>update-product<%} else {%>store-product<%} %>" method="POST">
            <% if(editing) { %>
                <input type="hidden" name="productId" value="<%= product.id%>"/>
            <% } %>
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" value="<% if(editing) { %> <%= product.title %> <%} %>" id="title" required>
            </div>
        
            <div class="form-control">
                <label for="imageUrl">Image</label>
                <input type="text" name="imageUrl" value="<% if(editing) { %> <%= product.imageUrl %> <%} %>" id="imageUrl" required>
            </div>
        
            <div class="form-control">
                <label for="price">Price</label>
                <input type="text" name="price" value="<% if(editing) { %> <%= product.price %> <%} %>" id="price" step="0.01" required>
            </div>
        
            <div class="form-control">
                <label for="description">Description</label>
                <input type="text" name="description" value="<% if(editing) { %> <%= product.description %> <%} %>" id="description" required>
            </div>
        
            <button class="btn" type="submit">
                <% if (editing) { %>
                    Update Product
                <% } else { %>
                    Add Product
                <% } %>
            </button>
        </form>
    </main>
<%- include('../../includes/end.ejs') %>