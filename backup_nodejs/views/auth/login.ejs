<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (errorMessage) { %>
            <div class="user-message user-message--error">
                <%= errorMessage %>
            </div>
        <% } %>
        <form class="login-form" action="/login" method="POST" novalidate>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

            <div class="form-control">
                <label for="email">E-Mail</label>
                <input class="<%= validationErrors.find(e => e.path === 'email') ? 'invalid' : '' %>" type="email" name="email" value="<%= oldInput.email %>" id="email">
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input class="<%= validationErrors.find(e => e.path === 'password') ? 'invalid' : '' %>" type="password" name="password" value="<%= oldInput.password %>" id="password">
            </div>
            <button class="btn" type="submit">Login</button>
            <div style="margin-top: 15px;">
                <a href="/reset-password-email">Reset Password</a>
            </div>
        </form>
        
    </main>
<%- include('../includes/end.ejs') %>