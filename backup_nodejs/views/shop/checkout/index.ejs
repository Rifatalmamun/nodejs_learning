            <form action="/store-order" method="post">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                <button type="submit" class="btn">Place Order</button>
            </form>
        </div> -->
    </main>
<%- include('../../includes/end.ejs') %>