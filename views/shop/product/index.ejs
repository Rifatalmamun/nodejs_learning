<%- include('../../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../../includes/navigation.ejs') %>

    <main>
        <h1>Explore produts</h1>

        <% if (prods?.length > 0) { %>
            <div class="grid">
                <% for (let product of prods) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= product.title %></h1>
                        </header>
                        <div class="card__image">
                            <img src="<%= product.imageUrl %>"
                                alt="<%= product.title %>">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">$<%= product.price %></h2>
                            <p class="product__description"><%= product.description %></p>
                        </div>
                        <div class="card__actions" style="display: flex; justify-content: center;">
                            <div>
                                <a href="/product/<%= product.id %>" class="btn" style="text-decoration: none;padding: 4px;">Details</a>
                            </div>

                            <form action="/cart" method="POST">
                                <input type="hidden" name="productId" value="<%= product.id %>">
                                <button type="submit" class="btn" style="padding: 4px; margin-top: -4px">Add to Cart</a>
                            </form>
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>No Products Found!</h1>
        <% } %>
    </main>
<%- include('../../includes/end.ejs') %>