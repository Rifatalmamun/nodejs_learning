<%- include('../../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../../includes/navigation.ejs') %>

    <main>
        <% if (editing) { %>
            <h1>Edit Product</h1>
        <% } else { %>
            <h1>Create Product</h1>
        <% } %>

        <% if (errorMessage) { %>
            <div class="user-message user-message--error">
                <%= errorMessage %>
            </div>
        <% } %>
        
        <form class="product-form" action="/admin/<% if(editing) { %>update-product<%} else {%>store-product<%} %>" method="POST" novalidate enctype="multipart/form-data">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <% if(editing) { %>
                <input type="hidden" name="productId" value="<%= product._id%>"/>
            <% } %>
            <div class="form-control">
                <label for="title">Title</label>
                <input class="<%= validationErrors.find(e => e.path === 'title') ? 'invalid' : '' %>" type="text" name="title" value="<% if(editing || hasError) { %><%=product.title%><%} %>" id="title" required>
            </div>
        
            <!-- <div class="form-control">
                <label for="imageUrl">Image</label>
                <input class="<%= validationErrors.find(e => e.path === 'imageUrl') ? 'invalid' : '' %>" type="text" name="imageUrl" value="<% if(editing || hasError) {%><%=product.imageUrl%><%}%>" id="imageUrl" required>
            </div> -->

            <div class="form-control">
                <label for="price">Price</label>
                <input class="<%= validationErrors.find(e => e.path === 'price') ? 'invalid' : '' %>" type="text" name="price" value="<% if(editing || hasError) {%><%=product.price%><%}%>" id="price" required>
            </div>
        
            <div class="form-control">
                <label for="description">Description</label>
                <input class="<%= validationErrors.find(e => e.path === 'description') ? 'invalid' : '' %>" type="text" name="description" value="<% if(editing || hasError) {%><%=product.description%><%} %>" id="description" required>
            </div>

            <div class="form-control">
                <label for="image">Image</label>
                <input id="image" type="file" name="image" required>
            </div>
        
            <button class="btn" type="submit">
                <% if (editing) { %>
                    Update Product
                <% } else { %>
                    Add Product
                <% } %>
            </button>
        </form>
    </main>
<%- include('../../includes/end.ejs') %>